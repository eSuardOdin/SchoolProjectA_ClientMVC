<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SchoolProjectA_ClientMVC.Views.Log.LogView">
  <Panel>
        <StackPanel Spacing="12" VerticalAlignment="Bottom" HorizontalAlignment="Center">
			<TextBox Name="LoginTB" Margin="5,5" Watermark="Login"></TextBox>
			<TextBox Margin="5,5" Watermark="Password" PasswordChar="*"></TextBox>
            <Button Margin="10,10" Name="ConnectBtn">Connexion</Button>
        </StackPanel>
  </Panel>
  
</UserControl>